{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "packageManager": "pnpm",
    "analytics": false,
    "schematicCollections": [
      "@angular-eslint/schematics",
      "@angular-eslint/schematics"
    ]
  },
  "projects": {
    "ngx-panzoom": {
      "projectType": "library",
      "root": "projects/ngx-panzoom",
      "sourceRoot": "projects/ngx-panzoom/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/ngx-panzoom/tsconfig.lib.json",
            "project": "projects/ngx-panzoom/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-panzoom/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-panzoom/**/*.ts",
              "projects/ngx-panzoom/**/*.html"
            ]
          }
        }
      }
    }
  }
}
